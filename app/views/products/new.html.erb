<h1>Add a Movie</h1>

<%= form_for @product do |f| %>

  <div class="field">
    <%= f.label :name %>:
    <%= f.text_field :name %><br />
  </div>

  <div class="field">
    <%= f.label :description %>:
    <%= f.text_area :description %><br />
  </div>

  <div class="field">
    <%= f.label :price_in_cents %>:
    <%= f.number_field :price_in_cents %><br />
  </div>

  <div class="field">
    <%= f.label :url %>:
    <%= f.text_field :url %><br />
  </div>

  <div class="actions">
    <%= f.submit "Submit" %><br />
  </div>

<% end %>